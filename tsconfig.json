{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "esnext.bigint"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "moduleResolution": "Node",
    "module": "esnext",
    "rootDir": "./lib",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "lib/**/*.spec.ts",
    "lib/**/*.test.ts",
    "lib/**/*.mock.ts"
  ]
}
